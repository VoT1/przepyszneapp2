<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNazwaProduktLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa produktu:"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNazwaProdukt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNazwaProduktLabel"
        app:layout_constraintTop_toTopOf="@+id/tvNazwaProduktLabel"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/tvWagaProduktLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waga:"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNazwaProdukt" />

    <EditText
        android:id="@+id/etwagaProdukt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toEndOf="@+id/tvWagaProduktLabel"
        app:layout_constraintTop_toTopOf="@+id/tvWagaProduktLabel"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/tvKcalProduktLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kcal:"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etwagaProdukt" />

    <EditText
        android:id="@+id/etkcalProdukt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toEndOf="@+id/tvKcalProduktLabel"
        app:layout_constraintTop_toTopOf="@+id/tvKcalProduktLabel"
        app:layout_constraintWidth_default="wrap" />

    <Button
        android:id="@+id/buttonZapiszProdukt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Zapisz EdycjÄ™ Produktu"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etkcalProdukt" />

</androidx.constraintlayout.widget.ConstraintLayout>

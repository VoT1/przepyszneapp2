<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etNazwaDodajUser"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginStart="90dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etHasloDodajUser"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginStart="90dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonZapiszDodajUser"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginStart="115dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="279dp"
        android:text="DODAJ USER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNazwaDodajUser" />

    <Spinner
        android:id="@+id/spinnerAdminDodajUser"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="4dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/buttonZapiszDodajUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHasloDodajUser" />

</androidx.constraintlayout.widget.ConstraintLayout>